<? function link(name) { ?>[<?= name ?>](#<?=
  name.toLowerCase().replace(/ /g, '-').replace(new RegExp('[\\[\\]{}()<>^$#@!%&*+\/\\|~`"\':;,.]', 'g'), '')
?>)<? } ?>

<? function fieldSignature(comment) { return comment.fqn; } ?>
<? function paramList(comment) { return comment.multiTags.param.map(function(p) { return p.name; }).join(', '); } ?>
<? function methodSignature(comment) { return comment.fqn +'('+ paramList(comment) +')'; } ?>
<? function signature(comment) {
  return comment.type === 'property'? fieldSignature(comment): methodSignature(comment);
} ?>

<? function printMultitags(comment) { ?>
  <? comment.multiTags.precondition.forEach(function(precondition) { ?>
    *@precondition* - <?= precondition ?>
  <? }) ?>
  <? comment.multiTags.postcondition.forEach(function(postcondition) { ?>
    *@postcondition* - <?= postcondition ?>
  <? }) ?>
  <? comment.multiTags.invariant.forEach(function(invariant) { ?>
    *@invariant* - <?= invariant ?>
  <? }) ?>
  <? comment.multiTags.see.forEach(function(see) { ?>
    *@see* - <?= see ?>
  <? }) ?>
<? } ?>

